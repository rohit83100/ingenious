<%= content_tag "div" , id: "upvote-#{post.id}" do %>
  <%= button_to upvote_post_path(post), method: :patch, remote: true, data: { disable_with: "voting..." },
    style:"border: none; margin-right: 7px; background: none;" do %>
    <% if current_user.voted_up_on? post %>
      <%= image_tag 'heartfull.png' , style:"width:35px; height:35px;" %>
        <% else %>
          <%= image_tag 'heart.png' , style:"width:35px; height:35px;" %>
            <% end %>
              <% end %>
                <% end %>