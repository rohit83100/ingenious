<%= render "/nav" %>
<div style="display: flex;">
        <div class="container center my-5" align="right" style="margin-right: 30px; margin-left:-300px" >
            <% @post.each do |post| %>
            <div class="card" style="width: 28rem; margin-bottom: 1rem; text-align: left !important;">
                <div>
                    <div><img src="" alt="">  <span><%= post.user.email %> </span> 
                        <span style="float: right;">
                            <div class="dropdown">
                                <a class="" id="dropdownMenuButton1" data-bs-toggle="dropdown" >
                                    <%= image_tag "ellipsis.png" %>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <% if post.user_id == current_user.id  %>
                                  <li><%= button_to "Delete", post_path(post) , method: :delete, class:"dropdown-item"  %></li>
                                  <li><%= link_to 'Edit', edit_post_path(post), class:"dropdown-item"  %></li>
                                  <% end %>
                                  <li> <%= link_to 'go to post', post_path(post),class:"dropdown-item"  %></li>
                                </ul>
                              </div>
                           </span>
                
                    </div>
                </div>
                
                <%= image_tag post.image.representation(resize_to_limit: [100, 100]), class:"card-img-top" if post.image.attached? %>
                <div class="card-body" >
                    <% like = current_user.likes.find_by(post: @post) %>
                    <% if like.nil? %> 
                    <%= button_to  (image_tag "heart.png"), likes_path, params: {like: { post_id: @post}}, method: :post ,class:"btn-like"   %>
                    <% else %>
                    <%= button_to (image_tag "heartfull.png", width:32 , height:32 ), like_path(like), method: :delete, class:"btn-like" %>
                    <% end %>
                <%= link_to ( image_tag "text.png"), post_path(post)  %>
                <%= image_tag "plane.png"  %>
                <p>158,589 views</p>
                    <p class="card-text"><%= post.description %></p>
                </div>
            </div>
            <% end %>
        </div>
        <div class="container " align="center" style="width: 300px; margin-left:0;background: #D9D9D9;
        border-radius: 15px; margin-right:50px; margin-top:54px; ">
        <div style="text-align: left  !important;">
            <div><span>suggestion for you</span> <span style="float: right !important;">See All</span>
                <% @user.each do |user| %>
<div class="card">
    <%= user.email %>
</div>
                
                <% end %>
            </div>
        </div>
       
        </div>
        
</div>       

