<%= render "/nav" %>
<%= stylesheet_link_tag 'profile_new.css' %>
<div class="container">
    <div class="container" style="display: flex;">
        <div class="round-img"><%= image_tag @profile.image.representation(resize_to_limit: [150, 150]), style:"border-radius:100%;height: 148px;
            width: 156px;" if @profile.image.attached? %></div>
        <div>
            <div>
                <p class="baju">
                    <span class="rohit_text"><%= @profile.uname %> </span>
                    <span>
                        
                        <button class="btn-colun edited btn">
                       
                        <%= link_to 'Edit Profile', edit_profile_path , class:'a-taging' %>
                    </button></span>
                </p>
            </div>
            <div class="baju2">
                <span class="texting-post"><%= @profi.length %> Posts</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="desc-text-bio">
            <%= @profile.description %>
        </div>
    </div>
    <div class="line-profile">
    </div>
    <div style="display: flex;">
        <% @profi.each do |prof| %>
        <div class="card"style="width: 25rem; margin:10px; background:white !important; display:flex; height:26rem; border-radius:20px; margin-bottom: 1rem; ">
            <%= link_to @profile.user.email, post_path(prof)  %>
            <div class="card" >
                <%= image_tag prof.image.representation(resize_to_limit: [250, 250]), class:"card-img-top" if prof.image.attached? %>
            </div>
        </div>
        <% end %>
    </div>
   
</div>
