<%= stylesheet_link_tag "signup.css" %>
<%= render "/navbar" %>

<div class="container box-main">
<div class="felxing-box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

 <h2 class="sign-text">Sign up</h2>
  <div class="">
    <%= f.label :email , class:"label-style" %>:
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "inp-field", placeholder:"Enter Your E-mail " %>
  </div>

  <div class="field">
    <%= f.label :password , class:"label-style" %>
    <% if @minimum_password_length %>
:
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "inp-field", placeholder:"Enter Your Password " %>
  </div>

  <div class="field">
    <%= f.label :"re-Password" , class:"label-style" %>:
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "inp-field", placeholder:"Enter Your Password again " %>
  </div>

  <div class="actions">
    <%= f.submit "SIGN UP", class:"btn-sign" %>
  </div>
<% end %>

<div>
  <%= image_tag "line-bend.svg", class:"line-bend" %>
</div>

<div>
<%= image_tag "market.svg", class:"img-market" %>
<div class="login-text">
Have an acocunt?
    <%= render "users/shared/links", class:"col-change" %>
</div>

</div>


</div>
</div>
<%= render "/footer" %>